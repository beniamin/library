{% extends 'base.html.twig' %}

{% block body %}
    <h1>Authors list</h1>

    <div class="row">
        <div class="col-md-8">
            <table class="table table-condensed table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td><a href="{{ path('author_show', { 'id': author.id }) }}">{{ author.id }}</a></td>
                        <td>{{ author.firstName }}</td>
                        <td>{{ author.lastName }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a class="btn btn-sm btn-default" href="{{ path('author_show', { 'id': author.id }) }}">show</a>
                                </li>
                                <li>
                                    <a class="btn btn-sm btn-warning" href="{{ path('author_edit', { 'id': author.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <ul>
        <li>
            <a class="btn btn-sm btn-success" href="{{ path('author_new') }}">Create a new author</a>
        </li>
    </ul>
{% endblock %}
