{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author edit</h1>
    <div class="row">
        <div class="col-md-6">
            {{ form_start(edit_form, { 'style': 'horizontal' }) }}
                {{ form_widget(edit_form) }}
                <input  class="btn btn-primary" type="submit" value="Edit" />
            {{ form_end(edit_form) }}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-default pull-left" href="{{ path('author_index') }}">Back to the list</a>

            {{ form_start(delete_form) }}
                <input class="btn btn-danger pull-right" type="submit" value="Delete">
            {{ form_end(delete_form) }}

        </div>
    </div>
{% endblock %}
