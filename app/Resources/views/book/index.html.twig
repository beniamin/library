{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books list</h1>

<div class="row">
    <div class="col-md-8">
        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Isbn</th>
                    <th>Year</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.isbn }}</td>
                    <td>{{ book.year }}</td>
                    <td>{{ book.description }}</td>
                    <td>{{ book.rating }}</td>
                    <td>
                        <ul>
                            <li>
                                <a class="btn btn-sm btn-default" href="{{ path('book_show', { 'id': book.id }) }}">show</a>
                            </li>
                            <li>
                                <a class="btn btn-sm btn-warning" href="{{ path('book_edit', { 'id': book.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

    <ul>
        <li>
            <a class="btn btn-sm btn-success" href="{{ path('book_new') }}">Create a new book</a>
        </li>
    </ul>
{% endblock %}
